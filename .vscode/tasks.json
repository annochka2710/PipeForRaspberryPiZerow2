{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_C_COMPILER=C:\\msys64\\mingw64\\bin\\gcc.exe",
                "-DCMAKE_CXX_COMPILER=C:\\msys64\\mingw64\\bin\\g++.exe",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--parallel", "4"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "RaspberryPi2"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}